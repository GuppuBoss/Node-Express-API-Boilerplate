{
  "swagger": "2.0",
  "info": {
    "description": "API endpoints documentation",
    "version": "1.0.0",
    "title": "API Documentation",
    "contact": {
      "email": "danialmunsif@gmail.com"
    }
  },
  "host": "localhost:7777",
  "basePath": "/api",
  "tags": [
    {
      "name": "Authentication",
      "description": "Everything related to user authentication."
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/user/profile": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Post to be able to change password.",
        "description": "Use Token for authorization.",
        "operationId": "deviceAuthenticate",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Enter new password",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Device"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Password Changed Sucessfully."
          },
          "404": {
            "description": "No User Found."
          },
          "401": {
            "description": "Unauthorized."
          }
        }
      }
    },
    "/user/profiles": {
      "get": {
        "tags": [
          "Authentication"
        ],
        "summary": "Get profile of user.",
        "description": "Put token for authorization",
        "operationId": "deviceAuthenticate",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Enter token",
            "required": true,
            "schema": {
              "type": "object"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Display User Credentials."
          },
          "404": {
            "description": "No User Found."
          },
          "401": {
            "description": "Unauthorized."
          }
        }
      }
    },
    "/user/profileu": {
      "put": {
        "tags": [
          "Authentication"
        ],
        "summary": "To update a user.",
        "description": "Enter new details.",
        "operationId": "childRewardsAndPoints",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Enter token",
            "required": true,
            "schema": {
              "type": "object"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User updated. Successful operation"
          },
          "404": {
            "description": "No User Found."
          },
          "401":{
            "description": "Unauthorized."
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/user/profiled": {
      "delete": {
        "tags": [
          "Authentication"
        ],
        "summary": "To delete a user.",
        "description": "Delete an existing user.",
        "operationId": "deviceConfig",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Enter token",
            "required": true,
            "schema": {
              "type": "object"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User Deleted. Successful operation"
          },
          "404": {
            "description": "No user found."
          },
          "401":{
            "description": "Unauthorized."
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "scheme": "bearer",
      "name": "Authorization",
      "bearerFormat": "JWT",
      "in": "header"
    }
  },
  "definitions": {
    "Authorization": {
      "type": "object",
      "required": [
        "password"
      ],
      "properties": {
        "password": {
          "type": "string"
        }
      }
    },
    "Routines": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}